{
  "name": "@pragmatic-divops/.github",
  "description": "organization level configuration repository",
  "license": "MIT",
  "repository": "pragmatic-divops/.github",
  "bugs": "https://github.com/pragmatic-divops/.github/issues",
  "homepage": "https://github.com/pragmatic-divops/.github#readme",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org)",
  "scripts": {
    "test": "npm-run-all --print-label --parallel lint:*",
    "lint:lockfile": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "lint:md": "remark . --frail",
    "generate:md": "remark . --output",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls >/dev/null",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@pragmatic-divops/commitlint-config": "1.0.54",
    "@pragmatic-divops/remark-preset": "4.0.3",
    "ban-sensitive-files": "1.10.1",
    "cz-conventional-changelog": "3.3.0",
    "husky": "9.0.10",
    "lockfile-lint": "4.13.0",
    "npm-run-all2": "6.1.2",
    "remark-cli": "12.0.0",
    "remark-toc": "9.0.0"
  }
}
